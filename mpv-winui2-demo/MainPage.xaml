<Page
    x:Class="mpv_winui2_demo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:mpv_winui2_demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <SwapChainPanel x:Name="PlayerView" SizeChanged="PlayerView_SizeChanged" CompositionScaleChanged="PlayerView_CompositionScaleChanged" />

        <Grid
            Grid.Row="1"
            Padding="8"
            Background="#222222">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                x:Name="UrlInput"
                Margin="0,0,8,0"
                HorizontalAlignment="Stretch"
                Text="https://developer.mozilla.org/shared-assets/videos/flower.mp4" />
            <Button
                x:Name="PlayButton"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Click="PlayButton_Click">
                Play
            </Button>
        </Grid>

    </Grid>
</Page>
